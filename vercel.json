{
  "version": 2,
  "builds": [
    {
      "src": "src/backend/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/backend/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/src/frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
