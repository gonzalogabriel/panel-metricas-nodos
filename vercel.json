{
  "version": 2,
  "builds": [
    {
      "src": "src/backend/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "src/frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/backend/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/src/frontend/dist/$1"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "src/frontend/dist"
}
